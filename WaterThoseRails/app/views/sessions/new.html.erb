<div class="center-div" id="login">
 <div class="col-md-4 col-md-offset-4">
   <h2>Login</h2>
   <%= form_for(:session_data, {url: sessions_path}) do |f| %>
       <%= f.label :email_address %>:
       <%= f.email_field :email_address, class: "form-control", :required => true %>

       <%= f.label :password %>:
       <%= f.password_field :password, class: "form-control", :required => true %><br>

       <%= f.submit "Login", class: "btn btn-success" %>
   <% end %>
  </div>
 </div>
