<div class="center-div">
    <div class="form-group">
      <div class="col-md-4 col-md-offset-4">
          <h2>Register</h2><br>
    <% if @user.errors.any? %>
      <% for message in @user.errors.full_messages %>
        <div class="alert alert-danger"><%= flash.now[:error] %><%= message %></div>
      <% end %>
    <% end %>

    <%= form_for @user do |f| %>
      <%= f.label :email_address %>
      <%= f.email_field :email_address, placeholder: ' Email', :class => "form-control" %><br>
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password', :class => "form-control" %><br>
      <%= f.label :password_confirmation, "Confirm password" %>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', :class => "form-control" %><br>
      <%= f.submit :class => 'btn btn-success'%>
    <% end %>
    </div>
  </div>
</div>
